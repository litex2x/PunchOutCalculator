@{
    ViewBag.Title = "Punch Out Calculator";
}

<div class="container" ng-app="punchCruncher" ng-controller="punchCruncherController">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div id="error" class="alert alert-danger" ng-show="error != null">
                <span ng-bind="error"></span>
            </div>
            <div id="success" class="alert alert-success" ng-show="success != null">
                <span>Punch out at </span><span ng-bind="success"></span>.
            </div>
            <form role="form">
                <strong>Punch In:</strong>
                <timepicker ng-model="request.PunchIn"></timepicker>
                <strong>Lunch Out:</strong>
                <timepicker ng-model="request.LunchOut"></timepicker>
                <strong>Lunch In:</strong>
                <timepicker ng-model="request.LunchIn"></timepicker>
                <div class="form-group">
                    <label for="targetHours">Target Total Minutes:</label>
                    <input id="targetHours" type="text" class="form-control" ng-model="request.TargetTotalMinutes">
                </div>
                <div class="checkbox">
                    <label>
                        <input id="override" type="checkbox" ng-model="request.IsLunchOverrideEnabled" />Override restrictions
                    </label>
                </div>
                <button class="btn btn-default" type="submit" ng-click="calculate(request)">Calculate</button>
            </form>
        </div>
    </div>
</div>
